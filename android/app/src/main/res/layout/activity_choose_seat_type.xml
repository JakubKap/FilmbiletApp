<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10sp"
    android:weightSum="60">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wybierz typ miejsca"
            android:textAlignment="center"
            android:textSize="20sp"
            android:fontFamily="@font/opensans_bold"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:text="EKRAN"
            android:textSize="15sp"
            android:textColor="#FFFFFF"
            android:paddingTop="2sp"
            android:background="#BABABA"
            android:textAlignment="center"
            android:fontFamily="@font/opensans_bold"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/customborder"
        android:orientation="vertical"
        android:layout_margin="10sp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="4"
            android:layout_gravity="center"
            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:lines="2"
                android:text="S1 dost.:
10 zł"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S1 dost.:
10 zł"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S2 dost.:
15 zł"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S2 dost.:
15 zł"

                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S3 dost.:
20 zł"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S3 dost.:
20 zł"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S4 dost.:
30 zł"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10sp"
                android:text="S4 dost.:
30 zł"
                />


        </GridLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical"
        android:layout_marginBottom="20sp"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Podsumowanie:"
            android:fontFamily="@font/opensans_bold"
            android:textSize="15sp"/>

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_margin="10sp" >

     <Button
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:background="@drawable/rounded_button_dark"
         android:paddingLeft="20dp"
         android:paddingRight="20dp"
         android:textColor="#f9f9f9"
         android:fontFamily="@font/opensans_bold"
         android:text="Wróć"
         android:minHeight="40dip"
         />



        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180sp"
            android:layout_margiRight="10sp"
            android:background="@drawable/rounded_button_light"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textColor="#f9f9f9"
            android:fontFamily="@font/opensans_bold"
            android:text="Dalej"
            android:minHeight="40dip"
            />

    </LinearLayout>

</LinearLayout>

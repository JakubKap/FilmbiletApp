<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:includeFontPadding="false"
                android:paddingBottom="5dp"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center_horizontal"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e7e8ed"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                >
                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/priceText"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorHint"
                    />
                <TextView
                    android:id="@+id/seatNumbersText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/currencyAndSeatsText"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/seatNumbers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorHint"
                    />

            </LinearLayout>
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.constraint.Guideline
                    android:id="@+id/halfReservation-line"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent=".5" />

                <TextView
                    android:id="@+id/reservationDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reservationDateText"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/halfReservation-line"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/reservationDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorHint"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/halfReservation-line"
                    app:layout_constraintTop_toBottomOf="@id/reservationDateText"
                    />
                <TextView
                    android:id="@+id/repertoireDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/repertoireDateText"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorPrimaryDark"
                    app:layout_constraintStart_toStartOf="@id/halfReservation-line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/repertoireDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:includeFontPadding="false"
                    android:textColor="@color/colorHint"
                    app:layout_constraintStart_toStartOf="@id/halfReservation-line"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/repertoireDateText"
                    />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
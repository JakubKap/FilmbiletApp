    <android.support.constraint.ConstraintLayout
        android:id="@+id/legendContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/seatsButtonsLline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gridLayoutContainer">

        <LinearLayout
            android:id="@+id/legend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:paddingBottom="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent">

            <Button
                android:id="@+id/availableSeatBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:width="@dimen/seatWidth"
                android:height="@dimen/seatHeight"
                android:background="@drawable/seat"
                android:minWidth="@dimen/seatWidth"
                android:minHeight="@dimen/seatHeight"
                style="?android:attr/borderlessButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginEnd="15sp"
                android:layout_marginRight="10sp"
                android:includeFontPadding="false"
                android:text="@string/available"
                android:textSize="@dimen/seatsSmallText" />

            <Button
                android:id="@+id/seatReserveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4sp"
                android:width="@dimen/seatWidth"
                android:height="@dimen/seatHeight"
                android:background="@drawable/seat_reserved"
                android:minWidth="@dimen/seatWidth"
                android:minHeight="@dimen/seatHeight"
                style="?android:attr/borderlessButtonStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:includeFontPadding="false"
                android:text="@string/reserved"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/seatsSmallText"
                android:layout_marginStart="5sp" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/actionButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="5sp"
        app:layout_constraintTop_toTopOf="@+id/seatsButtonsLline">

        <android.support.constraint.Guideline
            android:id="@+id/percent45Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".48" />

        <android.support.constraint.Guideline
            android:id="@+id/percent55Line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent=".52" />

        <Button
            android:id="@+id/seatsCloseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:minWidth="110sp"
            android:background="@drawable/cancel_button"
            android:text="@string/cancelBtnText"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/seatsSmallText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="@id/percent45Line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.45"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/seatsApproveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:minWidth="110sp"
            android:background="@drawable/approve_button"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/approveBtnText"
            android:textAllCaps="false"
            android:textColor="#f9f9f9"
            android:textSize="@dimen/seatsSmallText"
            app:layout_constraintStart_toStartOf="@id/percent55Line"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintWidth_default="percent"
            app:layout_constraintWidth_percent="0.45"
            style="?android:attr/borderlessButtonStyle"/>

    </android.support.constraint.ConstraintLayout>


    <ProgressBar
        android:id="@+id/seatsProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="35dp"
        android:layout_height="23dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>